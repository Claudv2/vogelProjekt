<table class="table">
    <tr>
        <th>Column1</th>
        <th>Column2</th>
        <th>Column3</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Column1</td>
            <td>@item.Column2</td>
            <td>@item.Column3</td>
            <td>
                @using (Html.BeginForm("Delete", "Home", new { id = item.Id }, FormMethod.Post))
                {
                    <input type="submit" value="Delete" />
                }
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
</table>
